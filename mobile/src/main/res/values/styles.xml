<resources>

    <style name="HomeDark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimaryDark">@color/themePrimaryDark</item>
        <item name="colorPrimary">@color/themePrimary</item>
        <item name="colorSecondary">@color/greenPrimary</item>
        <item name="android:windowBackground">@color/themeBackground</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="HomeDarkDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="colorAccent">@color/greenPrimary</item>
    </style>

    <style name="HomeDarkTranslucent" parent="HomeDark">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="HomeDark.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="HomeDark.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
</resources>
